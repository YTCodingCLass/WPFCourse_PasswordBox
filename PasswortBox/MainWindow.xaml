<Window x:Class="PasswortBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
	<Grid>
		<StackPanel Orientation="Vertical" Margin="5">
			<Grid Margin="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="7*"/>
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" Content="E-Mail:"/>
				<TextBox Grid.Column="1" x:Name="tb_Mail"/>
			</Grid>
			<Grid Margin="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="7*"/>
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" Content="Passwort:"/>
				<PasswordBox Grid.Column="1"  PasswordChar="X" x:Name="pb_Passwort"/>
			</Grid>
			<Button Content="Login" Click="Button_Click" Margin="5" Width="200"/>
		</StackPanel>
	</Grid>
</Window>
